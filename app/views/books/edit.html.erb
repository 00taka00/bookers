 <% if @book.errors.any? %>
 <%=@book.errors.count %>件のエラーが発生しました
  <ul>
   <% @book.errors.full_messages.each do |message| %>
    <li><%= message %></li>
   <%end%>
  </ul>
 <%end%>

<h1>編集画面(edit.html.erb)</h1>
<%= form_with model:@book,url:update_book_path(@book.id) ,method: :patch do |f| %>

 <h4>Title</h4>
 <%= f.text_field:title %>
 <h4>Body</h4>
 <%= f.text_area:body %>

 <h4><%= f.submit'update Book' %></h4>
 
<%end%>
 <a><%= link_to"show",book_path(@book.id) %></a>
