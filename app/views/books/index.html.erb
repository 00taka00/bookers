<h1>BOOKS(index.html.erb)</h1>

<table>
  <thead>
    <th>Title</th>
    <th>body</th>
  </thead>
  <tbody>
   <% @books.each do |book| %>
    <tr>
     <td><%= book.title %></td>
     <td><%= book.body %></td>
     <td><%= link_to"show",book_path(book.id) %></td>
     <td><%= link_to"edit",edit_book_path(book.id) %></td>
　　 <td><%= link_to"destroy",book_path(book.id),method: :delete,"date-confirm"=>"本当に削除しますか？"%></td>
　 </tr>
   <%end%>
  </tbody>
</table>


<h2>NEW BOOK(create機能)</h2>
<% if @book.errors.any? %>
 <%=@book.errors.count %>件のエラーが発生しました
 <ul>
  <% @book.errors.full_messages.each do |message| %>
   <li><%= message %></li>
  <%end%>
 </ul>
<%end%>

 <%=form_with model:@book,url:'/books',method: :post do |f| %>
 <div>
 <h5>Title</h5>
 <%=f.text_field:title %>
 </div>
 <div>
 <h5>Body</h5>
 <%= f.text_area:body %>
 </div>
 <h5><%= f.submit'Create Book'%></h5>

 <%end%>